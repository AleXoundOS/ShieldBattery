{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,

    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "jsx": "react",
    "noEmit": true
  },

  "exclude": ["dist", "node_modules", "server/public", "app/dist", "app/node_modules", "game"]
}
